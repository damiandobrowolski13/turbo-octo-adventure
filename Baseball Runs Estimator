#Baseball Runs Estimator
import random
outs=0
num=0
print("Welcome to Baseball Runs Estimator")
ba1=int(input("Enter first player's batting average: "))
ba2=int(input("Enter second player's batting average: "))
ba3=int(input("Enter third player's batting average: "))
ba4=int(input("Enter fourth player's batting average: "))
ba5=int(input("Enter fifth player's batting average: "))
ba6=int(input("Enter sixth player's batting average: "))
ba7=int(input("Enter seventh player's batting average: "))
ba8=int(input("Enter eighth player's batting average: "))
ba9=int(input("Enter ninth player's batting average: "))
base1=random.randint(1,4)
base2=random.randint(1,4)
base3=random.randint(1,4)
base4=random.randint(1,4)
base5=random.randint(1,4)
base6=random.randint(1,4)
base7=random.randint(1,4)
base8=random.randint(1,4)
base9=random.randint(1,4)
rand1=random.randint(0,1000)
print("Rand1: ",rand1)
rand2=random.randint(0,1000)
print("Rand2: ",rand2)
rand3=random.randint(0,1000)
print("Rand3: ",rand3)
rand4=random.randint(0,1000)
